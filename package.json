{
	"name": "sigma",
	"displayName": "sigma",
	"description": "Support for Sigma Signature Format",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sigma.helloWorld",
		"onLanguage:sigma"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"embeddedLanguages": {
					"meta.embedded.block.frontmatter": "yaml"
				},
				"id": "sigma",
				"aliases": [
					"sigma",
					"sigma-syntax",
					"sigmalang",
					"SIGMA",
					"Sigma"
				],
				"extensions": [
					".yml"
				]
			}
		],
		"grammars": [
			{
				"comments": [
					"YAML syntax as base for Sigma",
					"scopeName changed so that we can use it as base for injections"
				],
				"language": "sigma",
				"scopeName": "source.sigma",
				"path": "./syntaxes/external/YAML.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "sigma.helloWorld",
				"title": "Hello World"
			}
		],
		"snippets": [
			{
				"language": "yaml",
				"path": "./snippets/sigma.json"
			}
		],
		"configuration": {
			"title": "sigma",
			"properties": {
				"sigma.debug": {
					"type": "bool",
					"default": false,
					"description": "Sigma Extension Debug Mode"
				},
				"sigma.author": {
					"type": "string",
					"default": "",
					"description": "Sets the Sigma author"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.65.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"ts-loader": "^9.2.6",
		"webpack": "^5.69.1",
		"webpack-cli": "^4.9.2",
		"@vscode/test-electron": "^2.1.2"
	}
}